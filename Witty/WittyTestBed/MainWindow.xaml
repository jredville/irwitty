<Window x:Class="WittyTestBed.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="300" Width="510">
  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="Height" Value="30"/>
      <Setter Property="Width" Value="100"/>
      <Setter Property="Margin" Value="10"/>  
    </Style>
  </Window.Resources>
    <WrapPanel >
      <Button x:Name="TweetScanButton" Content="TweetScan" Click="TweetScanButton_Click" />
      <Button x:Name="CustomWindowButton" Content="CustomWindow" Click="CustomWindowButton_Click" />
      <Button x:Name="FollowersButton" Content="Followers" Click="FollowersButton_Click" />
    </WrapPanel>
</Window>
